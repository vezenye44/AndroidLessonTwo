<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidLessonTwo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyCalculateTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        <item name="colorOnPrimary">@color/white</item>-->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/default_status_bar_color</item>

        <item name="fontFamily">@font/comic_shanns_font</item>

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/default_stroke_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>

        <item name="android:colorBackground">@color/default_background_color</item>

        <item name="digitBtnStyle">@style/ButtonStyle.Digit</item>
        <item name="operateBtnStyle">@style/ButtonStyle.Operate</item>
        <item name="featureBtnStyle">@style/ButtonStyle.Feature</item>
        <item name="functionBtnStyle">@style/ButtonStyle.Function</item>
        <item name="dotBtnStyle">@style/ButtonStyle.Dot</item>

    </style>
</resources>